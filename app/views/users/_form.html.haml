form_for @user do |f|
  =f_label f, :username
  =f.text_field :username, disabled: !@user.new_record?

  =f_label f, :email
  =f.email_field :email

  =f_label f, :password
  =f.password_field :password

  =f_label f, :password_confirmation, "Password (again)"
  =f.password_field :password_confirmation

  =f.submit
